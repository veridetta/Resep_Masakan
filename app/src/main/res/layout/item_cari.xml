<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_cari">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardMaxElevation="@dimen/_4sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/img_cari"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@drawable/food"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_80sdp"
                    android:background="@color/white"
                    android:padding="@dimen/_6sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/judul_cari"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:text="Hasil cari untuk kata helo "
                        android:textStyle="bold"
                        android:textColor="@color/blue_400"
                        android:textSize="@dimen/_16sdp"/>
                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:text="Lihat resep dan bagaimana proses pembuatannya sekarang"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fav_fav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/nofav"
                        android:id="@+id/img_fav_cari" />
                </LinearLayout>
            </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>